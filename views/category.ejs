<%- include("header") -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">
        <% listItem.forEach((li)=> { %>
        <form action="/<%= customList %> delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%= li._id %>" onChange="this.form.submit()">
                <p>
                    <%= li.name %>
                </p>
            </div>
        </form>
        <% }) %>

                <form class="item" action="/<%= customList %> " method="post">
                    <input type="text" name="name" placeholder="New Item" autocomplete="off">
                    <button type="submit" ">+</button>
                </form>
    </div>

    <%- include("footer") -%>